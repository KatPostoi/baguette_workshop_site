{
  "name": "baguette-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API for the baguette workshop pet project",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/src/main.js",
    "lint:fix": "sh -c 'if [ \"$#\" -gt 0 ]; then eslint --fix \"$@\" && npm run typecheck; else eslint --fix \"{src,prisma}/**/*.ts\" && npm run typecheck; fi' --",
    "lint:check": "sh -c 'if [ \"$#\" -gt 0 ]; then eslint \"$@\" && npm run typecheck; else eslint \"{src,prisma}/**/*.ts\" && npm run typecheck; fi' --",
    "format:fix": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "typecheck": "tsc --noEmit --incremental false --tsBuildInfoFile /tmp/tsconfig.tsbuildinfo",
    "prisma:generate": "dotenv -e ../.env.backend -- prisma generate --schema ./prisma/schema.prisma",
    "prisma:migrate": "dotenv -e ../.env.backend -- prisma migrate dev --schema ./prisma/schema.prisma",
    "prisma:seed": "dotenv -e ../.env.backend -- prisma db seed --schema ./prisma/schema.prisma",
    "prisma:sync": "dotenv -e ../.env.backend -- prisma db push --schema ./prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.15.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "joi": "^17.13.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.3.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.20.0",
    "prisma": "^6.15.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/node": "^22.10.7",
    "dotenv-cli": "^7.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
